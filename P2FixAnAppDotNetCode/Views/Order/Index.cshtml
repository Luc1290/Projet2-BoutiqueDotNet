@model P2FixAnAppDotNetCode.Models.Order
@inject IViewLocalizer Localizer

<h2>@Localizer["OrderTitle"]</h2>

<form asp-action="Index" method="post">
    <meta charset="UTF-8">

    <h3>@Localizer["ShipTo"]</h3>
    <div class="form-group">
        <label asp-for="Name">@Localizer["Name"]*:</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <h3>@Localizer["Adress"]</h3>
    <div class="form-group">
        <label asp-for="Address">@Localizer["Location"]*:</label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="form-group col-4">
            <label asp-for="City">@Localizer["City"]*:</label>
            <input asp-for="City" class="form-control" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
        <div class="form-group col-4">
            <label asp-for="Zip">@Localizer["Zip"]*:</label>
            <input asp-for="Zip" class="form-control" />
            <span asp-validation-for="Zip" class="text-danger"></span>
        </div>
        <div class="form-group col-4">
            <label asp-for="Country">@Localizer["Country"]*:</label>
            <input asp-for="Country" class="form-control" />
            <span asp-validation-for="Country" class="text-danger"></span>
        </div>
    </div>

    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="@Localizer["CompleteOrder"]" />
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
